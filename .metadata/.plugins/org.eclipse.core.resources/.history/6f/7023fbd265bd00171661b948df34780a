	public void move() { // 버스 이동을 위한 메소드
				
		if(pos.x>1100 || pos.x<10)
		{
			bus_speed=-bus_speed;
			pos.y+=140;			
		}
		pos.x+=bus_speed;	
		
	}
	
	public void where() { //좌석 색칠 좌표값 할당
		xy =(int)((Math.random()*24)); 
	}
	
